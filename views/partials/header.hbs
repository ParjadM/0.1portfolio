<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="/css/header.css">
</head>

<body>
    <header>
        <nav class="container">
            <div class="row">
                <div class="home-button">
                    <span id="home-btn">Home</span>
                </div>
                <div class="other-buttons">
                    <a href="/">
                        <button id="home-page-btn" class="btn btn-light">Home</button>
                    </a>
                    <a href="/about">
                        <button id="about-btn" class="btn btn-light">About</button>
                    </a>
                    <a href="/projects">
                        <button id="projects-btn" class="btn btn-light">Code</button>
                    </a>
                    <a href="/skills">
                        <button id="skills-btn" class="btn btn-light">Skills</button>
                    </a>
                    <a href="/contact">
                        <button id="contact-btn" class="btn btn-light">Contact</button>
                    </a>
                </div>
                {{#if username}} 
                <div class="user-info">
                    <span>Welcome, {{username}}!</span>
                    <a href="/logout">
                        <button id="logout-btn" class="btn btn-light">Logout</button>
                    </a>
                </div>
                {{/if}}
            </div>
        </nav>
    </header>

    <script>
        // Get the current URL path
        const currentPath = window.location.pathname;

        // Get the home button element (the span)
        const homeBtn = document.getElementById('home-btn');

        // Update the home button text based on the current path
        switch (currentPath) {
            case '/about':
                homeBtn.textContent = 'About';
                break;
            case '/projects':
                homeBtn.textContent = 'Projects';
                break;
            case '/skills':
                homeBtn.textContent = 'Skills';
                break;
            case '/contact':
                homeBtn.textContent = 'Contact';
                break;
            default: // This handles the home page ('/')
                homeBtn.textContent = 'Home';
        }
    </script>
</body>

</html>